<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ixa</groupId>
  <artifactId>ixa-pipe-ned</artifactId>
  <name>ixa-pipe-ned</name>
  <version>1.1.0</version>
  <description>ixa-pipe-ned is part of IXA-pipeline and performs Named Entity Disambiguation based on DBpedia Spotlight.
    In principle the pipeline is available for the annotation of English and Spanish texts, but it can be easily extended to
    deal with other languages too.</description>
  <url>http://maven.apache.org</url>
  <prerequisites>
    <maven>3.0</maven>
  </prerequisites>
  <developers>
    <developer>
      <id>ialdabe</id>
      <name>Itziar Aldabe</name>
      <email>itziar.aldabe@ehu.es</email>
    </developer>
    <developer>
      <id>ragerri</id>
      <name>Rodrigo Agerri</name>
      <email>rodrigo.agerri@ehu.es</email>
    </developer>
  </developers>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>ixa.pipe.ned.CLI</Main-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
              <artifactSet>
                <excludes />
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>ixa-ehu.github</id>
      <url>https://raw.github.com/ixa-ehu/kaflib-mvn-repo/master</url>
    </repository>
    <repository>
      <id>sonatype-snapshots</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

